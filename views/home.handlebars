<section>
  {{#each posts}}
    <article>
      <h2>{{title}}</h2>
      <p>{{content}}</p>
      <footer>
        <p>Posted by: {{user.username}}</p>
        <ul>
          {{#each comments}}
            <li>{{this.content}} - {{this.user.username}}</li>
          {{/each}}
        </ul>
      </footer>
    </article>
  {{/each}}
</section>